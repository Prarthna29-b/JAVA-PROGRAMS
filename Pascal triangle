/*package whatever //do not write package name here */

import java.io.*;

class GFG {
	public static void main (String[] args) {
	   
	   for(int i=1; i<=6; i++) {
	int coef=1;
	       for(int j=1;j<=6-i;j++)
	           System.out.print(" ");
	           for(int k=1;k<=i;k++){

	       System.out.print(coef+" ");
	       coef=coef*(i-k)/k;
	           

	       }
		System.out.println();
	
	   }
	   }
}

