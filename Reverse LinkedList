###Code 
// Simple Alternative method
class Solution {
    public ListNode reverseList(ListNode head) {
        if(head ==null||head.next==null)
            return head;
     ListNode cur=head;
        ListNode prev =null;
        ListNode next =null;
        while(cur.next!=null)
            {
     next=cur.next;
            cur.next=prev;
            prev=cur;
            cur=next;
            }
     cur.next=prev;
        return cur;
    }
}

